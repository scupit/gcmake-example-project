{
    "defaultCppStandard": "11",

    "supportedCppStandards": [
        "11",
        "14",
        "17"
    ],

    "output": {
        "_cpp_base_executable_": {
            "type": "executable",
            "mainFile": "main.cpp",
            "rSourceDirs": [ "src" ],
            "rHeaderDirs": [ "include" ],
            "includeDirs": [ "include" ]
        }
    },

    "buildTargets": {
        "Debug": {
            "compilerFlags": [
                "-g",
                "-Wall",
                "-Wextra",
                "-Wconversion",
                "-Wuninitialized",
                "-pedantic",
                "-pedantic-errors"
            ]
        },

        "Release": {
            "compilerFlags": [
                "-O2",
                "-DNDEBUG",
                "-s"
            ]
        }
    },

    "defaultBuildTarget": "Debug"
}

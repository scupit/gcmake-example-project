{
    "defaultCppStandard": "11",

    "outputGroups": {
        "exes": {
            "type": "executable",
            "outputs": {
                "main": {
                    "mainFile": "main.cpp"
                },
                "not_linked": {
                    "mainFile": "not_linked_main.cpp"
                }
            }
        },
        "grouped_libs": {
            "type": "staticLib",
            "outputs": {
                "math_lib": {
                    "rHeaderDirs": [ "include/math" ],
                    "rSourceDirs": [ "src/math" ]
                },
                "printing": {
                    "rHeaderDirs": [ "include/printing"],
                    "rSourceDirs": [ "src/printing" ]
                }
            },
            "includeDirs": [ "include" ]
        }
    },

    "links": {
        "exes.main": [
            "grouped_libs"
        ],
        "exes.not_linked": [
            "grouped_libs.printing"
        ]
    },

    "buildTargets": {
        "Debug": {
            "compilerFlags": [
                "-g",
                "-Wall",
                "-Wextra",
                "-Wconversion",
                "-Wuninitialized",
                "-pedantic",
                "-pedantic-errors"
            ]
        },

        "Release": {
            "compilerFlags": [
                "-O2",
                "-DNDEBUG",
                "-s"
            ]
        }
    }
}
